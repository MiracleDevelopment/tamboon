<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        app:cardUseCompatPadding="true"
        android:focusable="true"
        android:layout_margin="@dimen/padding_margin_4"
        android:layout_height="wrap_content">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:paddingStart="@dimen/padding_margin_4"
                android:paddingEnd="@dimen/padding_margin_4"
                android:paddingTop="@dimen/padding_margin_4"
                android:id="@+id/itemImageViewThumbnail"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:adjustViewBounds="true"/>

        <TextView
                android:id="@+id/itemTextViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingStart="@dimen/padding_margin_8"
                android:paddingTop="@dimen/padding_margin_8"
                android:paddingEnd="@dimen/padding_margin_8"
                android:paddingBottom="@dimen/padding_margin_8"
                android:textStyle="bold"
                tools:text="@tools:sample/full_names"/>

    </LinearLayout>

</android.support.v7.widget.CardView>